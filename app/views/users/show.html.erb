<!-- Page Header-->
<header class="masthead" style="background-image: url(<%= asset_path 'home-bg.jpg' %>)">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="page-heading">
                    <h1>Profil info</h1>
                    <span class="subheading">Welcom back</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content-->
<main class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <h1>page of <%= @user.name %></h1>

                <p>E-mail address: <%= @user.email %></p>

                <p>
                    <strong>Image:</strong>
                    <%= @user.image.url %> 
                    <%= image_tag @user.image.url if @user.image && @user.image.url %>                   
                  </p>
            </div>
        </div>
    </div>
</main>